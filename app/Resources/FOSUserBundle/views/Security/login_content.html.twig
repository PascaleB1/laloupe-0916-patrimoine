                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('accueil_index')~('1/edit') }}">Accueil</a></li>
                    <li><a href="{{ path('association_index')~('1/edit') }}">Associations</a></li>
                    <li><a href="{{ path('realisation_index')~('1/edit') }}">Realisations</a></li>
                    <li><a href="{{ path('agenda_index')~('1/edit') }}">Agenda</a></li>
                    <li><a class="btn btn-outline-warning" href="{{ path('mecene_index')~('1/edit') }}" role="button">Devenir
                            mecene</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

<br/>
<br/>
<br/>

<!-- PARTIE ADMIN -->
<div class="container text-center">

    <div class="row">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>

    <br />
    <br />

    <div class="row">

        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}

            <div class="row">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
            </div>

            <div class="row">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required"/>
            </div>

            <div class="row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="row">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
        </form>

    </div>
</div>